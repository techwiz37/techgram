{
  "name": "@techgram/node",
  "version": "0.0.1",
  "description": "Cross-runtime JavaScript library for building Telegram clients",
  "keywords": [
    "telegram",
    "telegram-client",
    "telegram-bot",
    "telegram-api",
    "deno",
    "typescript"
  ],
  "homepage": "https://github.com/techwiz37/techgram#readme",
  "bugs": {
    "url": "https://github.com/techwiz37/techgram/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techwiz37/techgram.git"
  },
  "license": "LGPL-3.0",
  "author": "Techwiz",
  "type": "module",
  "main": "./dist/cjs/mod.js",
  "module": "./dist/esm/mod.js",
  "types": "./mod.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./mod.ts",
        "default": "./dist/esm/mod.js"
      },
      "require": {
        "types": "./mod.ts",
        "default": "./dist/cjs/mod.js"
      },
      "types": "./mod.ts"
    },
    "./worker": {
      "import": {
        "types": "./worker.ts",
        "default": "./dist/esm/worker.js"
      },
      "require": {
        "types": "./worker.ts",
        "default": "./dist/cjs/worker.js"
      },
      "types": "./worker.ts"
    }
  },
  "scripts": {
    "test": "deno test --allow-all",
    "build": "node build-dual.js",
    "build:node": "node build-dual.js",
    "build:esm": "node build-dual.js",
    "build:cjs": "node build-dual.js",
    "postinstall": "node postinstall.js"
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "glob": "^10.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
